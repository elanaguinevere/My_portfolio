---
import Logo from '../components/Logo.astro';
const { headerClass } = Astro.props;
import BurgerMenu from '../assets/burgermenu.png';
---

<header>
    <div class="logo">
      <h1>
        <a href="/" class={`logo-title ${headerClass === 'default-header' ? 'active' : ''}`}>My Portfolio</a>
      </h1>
    </div>
    <nav>
      <ul>
        <li>
          <a href="/contact" class={`menu-item ${headerClass === 'contact-header' ? 'active' : ''}`}>Contact me</a>
        </li>
      </ul>
      <img src={BurgerMenu.src} alt="Menu" class="burger" />
    </nav>
  </header>
